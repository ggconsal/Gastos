<div class="page-header">
  <h3><u>Todos los Sub-Rubros</u></h3>
</div>

<table id="form-new" class="table table-hover table-condensed">
  <thead>
    <tr>
      <th>#</th>
      <th>Rubro</th>
      <th>Descripcion</th>
    </tr>
  </thead>
  <tbody>
    <% @subrubros.each do |vSubrubro| %>
      <tr>
        <td> <%= vSubrubro.id %> </td>
        <td> <% @tmprubros = Rubro.find(vSubrubro.rubro_id) %> 
             <%= @tmprubros.rub_desc %> </td>
        <td> <%= vSubrubro.sru_desc %> </td>
        <td id="columna-mmb"><%= link_to 'Modificar', edit_subrubro_path(vSubrubro) %></td>
      </tr>
    <% end %>
  </tbody>
  
</table>

<%= link_to 'Nuevo Sub-Rubro', new_subrubro_path, class: "btn btn-primary" %>

