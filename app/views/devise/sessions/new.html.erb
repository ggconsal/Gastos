<div class="page-header">
  <h3><u>Ingresar al sistema</u></h3>
</div>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div id="form-new" class="form-group has-success has-feedback">
    <%= f.email_field :email, :placeholder => "Ingrese el email...", :class=>"form-control", autofocus: true %>
  </div>

  <div id="form-new" class="form-group has-success has-feedback">
    <%= f.password_field :password, autocomplete: "off", :placeholder => "Ingrese una nueva Password...", :class=>"form-control" %>
  </div>

  <% if devise_mapping.rememberable? -%>
    <div><%= f.check_box :remember_me %> <%= f.label :remember_me %></div>
  <% end -%>

  <div class="actions">
    <%= f.submit "Confirmar", :class => "btn btn-primary" %>
    <%= link_to "Ir Atras", :back, :class => "btn btn-primary" %>
  </div><br>

<% end %>

<%= render "devise/shared/links" %>
