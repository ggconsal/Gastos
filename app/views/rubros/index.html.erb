<div class="page-header">
  <h3><u>Todos los Rubros</u></h3>
</div>

<table class="table table-condensed">
  <thead>
    <tr>
      <th>#</th>
      <th>Descripcion</th>
      <th>Suma?</th>
    </tr>
  </thead>
  <tbody>
    <% @rubros.each do |vRubro| %>
      <tr>
        <td> <%= vRubro.id %> </td>
        <td> <%= vRubro.rub_desc %> </td>
        <td> <%= if vRubro.rub_suma then "Si" else "No" end %> </td>
<!--        <td id="columna-mmb"><%= link_to 'Mostrar', vRubro %></td>
        <td id="columna-mmb"><%= link_to 'Borrar', vRubro, method: :delete, data: { confirm: 'Estas seguro que queres Borrar?' } %></td> -->
        <td id="columna-mmb"><%= link_to 'Modificar', edit_rubro_path(vRubro) %></td>
      </tr>
    <% end %>
  </tbody>
  
</table>

<%= link_to ' Nuevo Rubro ', new_rubro_path, class: "btn btn-primary" %>
