<h1>Listing rubros</h1>

<table>
  <thead>
    <tr>
      <th>Rub desc</th>
      <th>Rub suma</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @rubros.each do |rubro| %>
      <tr>
        <td><%= rubro.rub_desc %></td>
        <td><%= rubro.rub_suma %></td>
        <td><%= link_to 'Show', rubro %></td>
        <td><%= link_to 'Edit', edit_rubro_path(rubro) %></td>
        <td><%= link_to 'Destroy', rubro, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Rubro', new_rubro_path %>
